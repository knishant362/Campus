<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Campus" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_600</item>
        <item name="colorPrimaryVariant">@color/light_blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        <item name="android:fontFamily">@font/google_sans_med</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/card_orange_light</item>
        <item name="colorSecondaryVariant">@color/card_orange</item>
        <item name="colorOnSecondary">#2E2D2D</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/FloatActionButtonStyle</item>
    </style>

    <style name="Theme.Campus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Campus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Campus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/light_blue_900</item>
        <item name="checkedIconTint">@color/light_blue_900</item>

    </style>

    <style name="FloatActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>

    </style>
    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20%</item>

    </style>

    <style name="CustomChipStyleSubjects" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStrokeColor">@color/light_blue_600</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/p_blue_light</item>
        <item name="android:textColor">@color/light_blue_600</item>
        <item name="checkedIconTint">@color/light_blue_600</item>

    </style>

</resources>